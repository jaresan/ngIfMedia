    "build:lib": "npm run transpile && npm run package && npm run minify",
    "ng": "ng",
    "start": "ng serve",
    "build": "ng build",
    "test": "ng test",
    "lint": "ng lint"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/salsita/ng2-if-media.git"
  },
  "main": "dist/bundles/ng2IfMedia.umd.js",
  "module": "dist/lib/index.js",
  "typings": "dist/lib/index.d.ts",
  "keywords": [
