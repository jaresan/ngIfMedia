    "karma-jasmine-html-reporter": "^0.2.2",
    "protractor": "^5.1.2",
    "rollup": "^0.52.1",
    "rxjs": "^5.5.2",
    "tslint": "^5.7.0",
    "typescript": "^2.4.2",
    "uglify-js": "^3.2.1",
    "zone.js": "^0.8.14"
